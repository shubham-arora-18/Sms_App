<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/blue" android:centerColor="@color/blue" android:endColor="@color/blue" android:angle="270"/>
            <corners android:radius="5dp"/>
            <padding android:left="15dp" android:bottom="5dp" android:right="15dp" android:top="5dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/light_blue" android:centerColor="@color/light_blue" android:endColor="@color/light_blue" android:angle="270"/>
            <corners android:radius="5dp"/>
            <padding android:left="15dp" android:bottom="5dp" android:right="15dp" android:top="5dp"/>
        </shape>
    </item>

</selector>