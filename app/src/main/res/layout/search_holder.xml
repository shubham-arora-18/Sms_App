<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_green"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/conversation_card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/light_green"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/user_icon"
                android:src="@drawable/user_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shubham Arora"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:id="@+id/sender_name"
                android:layout_toRightOf="@id/user_icon"
                android:textColor="@color/blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/lightgray"
                android:text="How are you shubham !!!How are you shubham !!!How are you shubham !!!How are you shubham !!!How are you shubham !!!"
                android:layout_toRightOf="@id/user_icon"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="12sp"
                android:layout_below="@+id/sender_name"
                android:id="@+id/latest_msg" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="7sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:padding="2sp"
                android:layout_marginLeft="5sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    android:textColor="@color/gray_line"
                    android:id="@+id/date_label"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25-Feb-2017"
                    android:id="@+id/date"
                    android:textColor="@color/darker_gray_text"
                    android:textSize="10sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:padding="2sp"
                android:layout_marginRight="5sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time : "
                    android:id="@+id/time_label"
                    android:textColor="@color/gray_line"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Am"
                    android:id="@+id/time"
                    android:textColor="@color/darker_gray_text"
                    android:textSize="10sp"/>
            </LinearLayout>


            <View
                android:layout_width="0.2sp"
                android:layout_height="10sp"
                android:background="@color/gray_line"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>